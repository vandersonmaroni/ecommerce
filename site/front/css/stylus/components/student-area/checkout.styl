.checkout
  margin-top $topBarMenuHeightDesktop - 10
  padding 0
  @media(min-width: em(650px))
    margin-top $topBarMenuHeightDesktop

  > .flow-component
    display flex
    flex-wrap wrap
    width 100%

    > .state
      width 100%
      height 50px
      line-height 50px
      vertical-align middle
      font-size em(35px)
      text-align center
      font-family 'roboto light'
      color $textPrimaryColor
      background-color #555555
      z-index 1
      @media (min-width: em(650px))
        width 50%

        > .arrow
          width 50px
          height 50px
          position relative
          z-index 10
          @media (min-width: em(650px))
            margin -48px 0

          > .fristriangle
            width 0
            height 0
            border-top 24px solid transparent
            border-left 50px solid #ca4b00
            border-bottom 24px solid transparent
            z-index 10
            margin-lef -1px
            position relative

          > .secondtriangle
            width 0
            height 0
            border-top 26px solid transparent
            border-left 55px solid #fff
            border-bottom 26px solid transparent
            margin-top -50px
            position relative

    > .selected
      background-color $accentColor

    > .-textright
      text-align right

  > .detailing
    padding 0 25px
    margin-top 40px
    @media(min-width: em(800px))
      padding 0 75px
      margin-top 60px
    @media(min-width: em(1200px))
      margin-top 90px
      padding 0 150px

    > .info
      font-size em(40px)
      color $darkPrimaryColor
      font-family 'roboto light'
      margin-top 40px
      text-align center
      @media (min-width: em(800px))
        padding 0 20px
        font-size 35px

    > .cartlist
      width 100%
      border 1px solid $accentColor
      padding 5px
      @media (min-width: em(650px))
        padding 5px 25px

      > .title
        margin 10px 0
        font-size em(40px)
        font-family 'roboto light'
        color $accentColor
        text-align center

      > .item
        padding-top 5px;
        > .listfild
          padding 5px;
          border-top 1px solid #CBCBCB
          @media (min-width: em(650px))
            display flex
            align-content space-around

          > .fild_margin
            @media (min-width: em(650px))
              margin-left 1%
              padding-left 5%

          > .fild
            margin-top 15px
            width 100%
            @media (min-width: em(650px))
              width 32%

            > .name
              font-size em(24px)
              font-family 'roboto light'
              color $secondaryTextColor
              display block
              @media (min-width: em(1400px))
                font-size em(28px)

            > .value
              display block
              font-size em(28px)
              margin 10px 0
              font-family 'roboto light'
              color $primaryTextColor
              @media (min-width: em(1400px))
                font-size em(32px)

    > .containerbutton
      margin-top 40px
      display flex

      > .purchase
        width 100%
        height 70px
        margin-top 25px
        background $lightPrimaryColor
        color $textPrimaryColor
        font-size em(25px)
        border-radius 5px
        transition all 0.2s;
        @media(min-width: em(800px))
          width 200px
          height 60px
          margin 0 auto
        &:hover
          background $accentColor
          transition all 0.2s

    > .purchaseMessage
      width 100%
      text-align center
      color $primaryColor
      margin-top 30px
      font-size em(20px)
      @media(min-width: em(800px))
        font-size em(25px)
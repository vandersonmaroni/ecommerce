.courses-cores-filter
  width 100%
  font-family "roboto light"

  > .container
    width 100%
    position relative
    margin-bottom 30px
    @media (min-width: em(800px))
      width 60%
      margin 0 auto
      display flex
      justify-content space-between
      margin-bottom 60px

    > .item
      width 100%
      height 50px
      line-height 50px
      color #FFF
      font-size em(18px)
      text-align center
      margin-top 10px
      transition all .2s linear
      cursor pointer
      @media (min-width: em(800px))
        width 25%
        margin-top 0

.core_disabled
  background #ccc !important
  transition all .2s linear
  &:hover
    transition all .2s linear
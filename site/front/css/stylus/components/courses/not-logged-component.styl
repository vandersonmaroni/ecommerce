.not-logged-component
  width 100%
  margin-top 10px
  @media(min-width: em(800px))
    padding-bottom 10px

  > .button
    width 100%
    height 70px
    background $lightPrimaryColor
    color $textPrimaryColor
    font-size em(25px)
    border-radius 5px
    transition all 0.2s;
    @media(min-width: em(800px))
      width 50%
      margin-top 30px
    &:hover
      background $accentColor
      transition all 0.2s

    > .link
      display block
      width 100%
      height 70px
      text-align center
      line-height 70px
      vertical-align middle
      color $textPrimaryColor
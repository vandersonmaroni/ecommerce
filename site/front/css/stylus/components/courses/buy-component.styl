.buy-component
  width 100%
  margin-top 10px
  @media(min-width: em(800px))
    display flex
    justify-content space-between
    padding 10px 0

  > .price
    width 100%
    @media(min-width: em(800px))
      width 50%

    > .label
      color $dividerColor
      font-size em(18px)

    > .value
      margin-top 10px
      display block
      font-size em(40px)
      color $accentColor
      font-family 'roboto medium'
      @media(min-width: em(800px))
        font-size em(40px)
        margin-top 15px
      @media(min-width: em(800px))
        font-size em(45px)

  > .buttonactions
    margin-top 30px
    width 100%
    @media(min-width: em(800px))
      width 50%
      margin-top 0
    > .useterms
      margin-bottom 10px
      > .term[type=checkbox]
        width 18px
        height 18px

      > .term[type=checkbox] + label
        font-size em(16px)
        color $secondaryTextColor
        font-family 'roboto light'
        margin-left 10px
        text-align center
        line-height: 22px
        height 22px
        vertical-align top
        @media(min-width: em(800px))
          font-size em(14px);

      > .link
        font-size em(16px)
        color $secondaryTextColor
        margin-left 5px
        line-height: 22px
        height 22px
        vertical-align top
        text-decoration: underline
        transition all 0.2s;
        @media(min-width: em(800px))
          font-size em(14px);
        &:hover
          color $accentColor
          transition all 0.2s;

    > .buy
      width 100%
      height 70px
      background $lightPrimaryColor
      color $textPrimaryColor
      font-size em(25px)
      border-radius 5px
      transition all 0.2s;
      @media(min-width: em(800px))
        height 60px
      &:hover
        background $accentColor
        transition all 0.2s

    > .stockout
      width 100%
      height 70px
      background $secondaryTextColor
      color $textPrimaryColor
      font-size em(25px)
      border-radius 5px
      transition all 0.2s;
      @media(min-width: em(800px))
        height 60px
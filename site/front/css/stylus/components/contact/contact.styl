$input_margin
  margin-top 30px
  position relative

.contact-container
  @extend .page-section
  font-family "roboto light"
  margin-bottom 100px
  @media(min-width: em(800px))
    padding 0 8%

  > .infos
    width 100%
    @media(min-width: em(1250px))
      margin-left 4%
      display flex
      justify-content space-around

    > .item
      width 100%
      display flex
      justify-content flex-start
      margin-top 20px
      @media(min-width: em(1250px))
        width 32%

      > .icon
        width 40px
        height 40px
        fill $accentColor

      > .label
        min-height 40px
        line-height 40px
        margin-left 20px
        font-size em(14px)
        @media (min-width em(400px))
          font-size em(18px)


  > .form-contact
    width 100%
    margin 30px auto 0
    @media (min-width em(800px))
      display flex
      justify-content space-between
      flex-wrap wrap

    > .inputcontainer_full
        width 100%
        @extends $input_margin

    > .inputcontainer_big
      @extends $input_margin
      @media (min-width em(800px))
        width 68.6%

    > .inputcontainer_middle
      @extends $input_margin
      position relative
      @media (min-width em(800px))
        width 48.6%

    > .button
      @media (min-width em(800px))
        width 100%
        display flex
        justify-content center

      > .inputsubmit
        width 100%
        height 60px
        margin-top 40px
        background $accentColor
        color #FFF
        font-size em(18px)
        transition all .2s linear
        @media (min-width em(800px))
          width 200px
          height 70px
          margin-top 60px
        &:hover
          transition all .2s linear
          transform scale(1.05)
          cursor pointer

    > .message
      width 100%
      text-align center
      margin-top 30px
      color $accentColor

.inputsubmit_disabled
  transition all .2s linear
  background #999 !important
  opacity .7
  cursor auto !important
  &:hover
    transform scale(1.0) !important

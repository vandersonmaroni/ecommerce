.register-container
  width 100%
  margin-top $topBarMenuHeightDesktop + 20px
  @extend .page-section
  font-family "roboto light"
  @media(min-width: em(800px))
    padding 0 8%
  @media(min-width: em(1366px))
    margin-top $topBarMenuHeightDesktop + 70px

  > .getdata
    width 100%
    font-size 100%
    @media(min-width: em(800px))
      margin 0 auto
      width 70%

    > .title
      width 100%
      font-size em(28px)
      color $primaryTextColor
      text-align center
      @media(min-width: em(800px))
        font-size em(30px)
      @media(min-width: em(1366px))
        font-size em(35px)
      @media(min-width: em(1440px))
        font-size em(40px)

    > .grid
      color #FFF
      margin-top 30px
      @media (min-width: em(800px))
        display flex
        justify-content space-around
        margin-top 60px

      > .facebook
        width 100%
        height 80px
        background #4A6EA9
        display flex
        justify-content center
        font-size em(28px)
        transition all .2s linear
        @media (min-width: em(800px))
          width 260px
        &:hover
          cursor pointer
          transform scale(1.05)
          transition all .2s linear

        > .icon
          fill #FFF
          width 36px
          height 36px
          margin 20px 20px 0 0

        > .label
          margin-top 22px

      > .label
        font-size em(22px)
        color $primaryTextColor
        text-align center
        margin 20px 0
        @media (min-width: em(800px))
          width 20px

      > .google
        width 100%
        height 80px
        background #D62223
        display flex
        justify-content center
        font-size em(28px)
        padding-right 20px
        transition all .2s linear
        @media (min-width: em(800px))
          width 260px
        &:hover
          cursor pointer
          transform scale(1.05)
          transition all .2s linear

        > .icon
          fill #FFF
          width 48px
          height 48px
          margin 15px 20px 0 0

        > .label
          margin-top 22px



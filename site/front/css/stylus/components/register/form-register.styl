$input_margin
  margin-top 30px
  position relative

.form-register
  width 100%
  @media (min-width em(800px))
    display flex
    justify-content space-between
    flex-wrap wrap

  > .title
    width 100%
    margin-top 30px
    margin-bottom 15px
    font-size em(24px)
    color $accentColor
    @media (min-width em(800px))
      margin-top 60px
      margin-bottom 10px

  > .inputcontainer_full
      width 100%
      @extends $input_margin

  > .inputcontainer_big
    @extends $input_margin
    @media (min-width em(800px))
      width 68.6%

  > .inputcontainer_middle
    @extends $input_margin
    position relative
    @media (min-width em(800px))
      width 48.6%

    > .icon
      width 30px
      height 30px
      position absolute
      right 15px
      top 47%
      z-index 4
      &:hover
        cursor pointer

  > .inputcontainer_small
    @extends $input_margin
    @media (min-width em(800px))
      width 28.6%

  > .button
    @media (min-width em(800px))
      width 100%
      display flex
      justify-content center

    > .inputsubmit
      width 100%
      height 60px
      margin-top 40px
      background $accentColor
      color #FFF
      font-size em(18px)
      transition all .2s linear
      @media (min-width em(800px))
        width 200px
        height 70px
        margin-top 60px
      &:hover
        transition all .2s linear
        transform scale(1.05)
        cursor pointer

  > .checkcontainer
    width 100%
    @media (min-width em(500px))
      display flex
      justify-content space-around
      flex-wrap wrap

    > .item
      width 100%
      margin-top 10px
      position relative
      @media (min-width em(500px))
        width 50%
      @media (min-width em(800px))
        width 33.33%
      @media (min-width em(1366px))
        width 25%

      > .checkbox
        width 20px
        height 20px
        -webkit-appearance none
        background-color #fafafa
        border 1px solid #cacece
        box-shadow 0 1px 2px rgba(0,0,0,0.05), inset 0px -15px 10px -12px rgba(0,0,0,0.05)
        padding 9px
        border-radius 3px
        display inline-block
        position relative
        transition all .2s linear
        &:hover
          cursor pointer

      > .checkbox:focus
        transition all .2s linear
        transform scale(1.2)


      > .checkbox:active, checkbox:checked:active
        box-shadow 0 1px 2px rgba(0,0,0,0.05), inset 0px 1px 3px rgba(0,0,0,0.1)

      > .checkbox:checked:active
        background-color #e9ecee
        border 1px solid #adb8c0
        box-shadow 0 1px 2px rgba(0,0,0,0.05), inset 0px -15px 10px -12px rgba(0,0,0,0.05), inset 15px 10px -12px rgba(255,255,255,0.1)
        color #99a1a7

      > .checkbox:checked:after
        content '\2714'
        font-size 14px
        position absolute
        top 0px
        left 3px
        color #99a1a7

      > .label
        font-size em(16px)
        position absolute
        left 30px
        top 0
        @media (min-width em(1024px))
          font-size em(18px)
        &:hover
          cursor pointer

  > .description
    margin-bottom 20px
    @media (min-width em(800px))
      margin-bottom 10px

.inputsubmit_disabled
  transition all .2s linear
  background #999 !important
  opacity .7
  cursor auto !important
  &:hover
    transform scale(1.0) !important

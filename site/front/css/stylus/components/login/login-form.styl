.logincontainer
  width 100%
  position relative
  padding-top 110px
  font-family "roboto light"
  @media(min-width: em(800px))
    width 48%
    padding 0 3%
  @media(min-width: em(1600px))
    padding 0 3%

  > .form
    width 100%

    > .inputcontainer_full
      position relative
      width 100%
      margin-top 25px

      > .icon
        width 30px
        height 30px
        position absolute
        right 15px
        top 36%
        z-index 2
        &:hover
          cursor pointer

      > .messages-container
        top -15px

    > .gridbuttons
      @media(min-width: em(800px))
        display flex
        justify-content space-between

      > .actions
        width 100%
        @media(min-width: em(800px))
          width 50%

        > .link
          width 50%
          font-size em(14px)
          margin-top 20px
          text-decoration underline
          display inline-block
          &:hover
            cursor pointer
            text-decoration none
            color $accentColor

        > .inputsubmit
          width 100%
          height 60px
          background $accentColor
          margin-top 20px
          color #FFF
          text-align center
          transition all .2s linear
          @media(min-width: em(800px))
            width 175px
            font-size em(20px)
          &:hover
            transition all .2s linear
            transform scale(1.05)

      > .social
        position absolute
        top 0
        width 53%
        left 24%
        @media(min-width: em(500px))
          width 45%
          left 27%
        @media(min-width: em(800px))
          width 50%
          position static
          margin-top 20px

        > .label
          font-size em(16px)
          color $secondaryTextColor
          width 100%
          text-align center
          @media(min-width: em(800px))
            text-align right
            padding-right 34px

        > .grid
          display flex
          justify-content space-between
          margin-top 15px
          @media(min-width: em(800px))
            justify-content flex-end

          > .google
            width 65px
            height 65px
            border-radius 50%
            background #D62223
            margin-right 10px
            transition all .2s linear
            &:hover
              cursor pointer
              transition all .2s linear
              transform scale(1.05)

            > .icon
              fill #FFF
              width 42px
              height 42px
              margin 11px 0 0 11px

          > .facebook
            width 65px
            height 65px
            border-radius 50%
            background #4A6EA9
            margin-left 10px
            transition all .2s linear
            &:hover
              cursor pointer
              transition all .2s linear
              transform scale(1.05)

            > .icon
              fill #FFF
              width 32px
              height 32px
              margin 16px 0 0 16px

.inputsubmit_disabled
  transition all .2s linear
  background #999 !important
  opacity .7
  cursor auto !important
  &:hover
    transform scale(1.0) !important

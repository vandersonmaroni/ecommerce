$combo-item
  width 100%
  height 60px
  line-height 60px
  border-bottom 1px solid #666
  transition all 0.2s linear
  color $darkPrimaryColor
  padding 0 20px
  background #FFF
  position relative
  font-size em(14px)
  &:hover
    cursor pointer

.combo-box
  width 100%
  margin-top 10px
  border 1px solid #666
  border-bottom none

  > .container
    width 100%
    position relative
    transition all 0.2s linear

    > .inputhidden
      width 1px
      opacity 0
      position absolute

    > .item
      @extend $combo-item

    > .options
      width calc(100% + 2px)
      position absolute
      max-height 180px
      overflow-y auto
      border-left 1px solid #666
      border-right 1px solid #666
      left -1px
      z-index 1
      @media (min-width: em(800px))
        max-height 240px

      > .item
        @extend $combo-item
        &:hover
          background #F4F4F4

    > ._selected
      color $primaryTextColor
      font-size em(16px)

    > .icon
      width 40px
      height 40px
      fill $primaryTextColor
      position absolute
      top 10px
      right 10px
      &:hover
        cursor pointer

._combofocus
  transition all 0.2s linear
  transform scale(1.01)

._notfilled
  color #999 !important

.messages-container
  position absolute
  top 0
  right -10px
  z-index 2

.messages_invalid
  padding 0 20px
  color #FFF
  background $inputFocusInvalid
  height 35px
  line-height 35px
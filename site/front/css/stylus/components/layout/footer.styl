.footer-container
  width 100%
  height 250px
  background #666
  border-top 3px solid $accentColor
  margin-top 30px
  margin-bottom $topBarMenuHeightMobile
  padding-top 30px
  transition all .2s linear
  @media (min-width: em(800px))
    height 80px
    margin-bottom 0
    margin-top 60px
    padding 15px 30px 0
    display flex
    justify-content space-between
    flex-direction row-reverse

  > .social
    width 100%
    margin-top 50px
    @media (min-width: em(800px))
      width 50%
      margin 0 auto

    > .container
      @media (min-width: em(800px))
        display flex
        justify-content center
        flex-direction row-reverse

      > .grid
        display flex
        justify-content space-around
        @media (min-width: em(800px))
          margin-left 30px

        > .link
          > .icon
            width 50px
            height 50px
            fill #FFF
            @media (min-width: em(800px))
              width 30px
              height 30px
              margin-left 20px
              margin-top 8px
              transition all 0.2s linear
              &:hover
                cursor pointer
                transition all 0.2s linear
                transform scale(1.07)

      > .label
        margin-top 10px
        color #FFF
        font-size em(25px)
        font-family "roboto light"
        width 100%
        text-align center
        @media (min-width: em(800px))
          width auto

.footer-fixed
  @media (min-width: em(800px))
    position fixed
    bottom 0
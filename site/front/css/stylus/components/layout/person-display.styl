.person-display
  @extends .page-section
  width 100%
  font-family "roboto light"
  @media (min-width: em(800px))
    padding 0 30px
    display flex
    justify-content flex-start
    flex-wrap wrap

  > .item
    width 100%
    border-radius 2px
    margin-top 60px
    @media (min-width: em(800px))
      width 45%
      margin-left 3%
    @media (min-width: em(1440px))
      margin-left 4%

    > .grid
      @media (min-width: em(1024px))
        display flex
        justify-content space-between

      > .image
        width 241px
        height 242px
        border 5px solid #333
        margin 0 auto
        > img
          width auto
          height 100%

      > .info
        width 100%
        font-size 100%
        margin-top 20px
        @media (min-width: em(1024px))
          margin 0
          padding 0 20px
          font-size 80%
        @media (min-width: em(1200px))
          font-size 95%
        @media (min-width: em(1366px))
          font-size 102%
        @media (min-width: em(1440px))
          font-size 107%
        @media (min-width: em(1600px))
          font-size 120%

        > .name
          width 100%
          text-align center
          font-size em(25px)
          color $primaryColor
          @media (min-width: em(1024px))
            text-align left

        > .divisor
          width 100%
          height 1px
          background $primaryColor
          margin 10px 0

        > .description
          font-size em(17px)
          color $primaryTextColor

        > .socials
          width 50%
          display flex
          justify-content flex start
          margin-top 20px
          @media (min-width: em(800px))
            margin-top 15px
          @media (min-width: em(1440px))
            margin-top 13px

          > .link
            display

            > .icon
              width 30px
              height 30px
              fill $primaryColor
              transition all .2s linear
              @media (min-width: em(800px))
                width 30px
                height 30px
              &:hover
                transition all .2s linear
                cursor pointer
                transform scale(1.07)

            > .icon_margin
              margin-left 20px